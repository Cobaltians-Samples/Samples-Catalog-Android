<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.cobaltians.cobaltcatalog"
    android:windowSoftInputMode="adjustPan">

    <application
        android:name=".CobaltCatalogApplication"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@drawable/ic_launcher"
        android:theme="@style/AppTheme">


        <activity android:name=".activities.CallbacksActivity" />
        <activity android:name=".activities.EventsActivity" />
        <activity android:name=".activities.ModalActivity" />
        <activity
            android:name=".activities.NativeBarsActivity"
            android:theme="@style/NativeBarsTheme"/>
        <activity
            android:name=".activities.PluginsActivity"
            android:theme="@style/PluginsTheme" />
        <activity android:name=".activities.PullToRefreshActivity" />
        <activity android:name=".activities.PullToRefreshCustomActivity" />
        <activity android:name=".activities.SimpleHybridActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>
