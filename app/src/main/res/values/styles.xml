<resources>

    <!-- Base application theme -->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/AppBaseActionBarTheme</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/AppBaseActionBarTheme</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <!-- Customize your theme here. -->
    </style>

    <!-- Plugin theme applied to the application or activity -->
    <style name="PluginsTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/PluginsActionBarTheme</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/PluginsActionBarTheme</item>
    </style>

    <!-- Native Bars theme applied to the application or activity -->
    <style name="NativeBarsTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/AppBaseActionBarTheme</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/AppBaseActionBarTheme</item>
    </style>

    <!-- ActionBar themes -->
    <style name="AppBaseActionBarTheme" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/cobalt_blue</item>
        <!-- Support library compatibility -->
        <item name="background">@color/cobalt_blue</item>
    </style>
    <style name="PluginsActionBarTheme" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/cobalt_green</item>
        <!-- Support library compatibility -->
        <item name="background">@color/cobalt_green</item>
    </style>

</resources>
